#!/usr/bin/make -f

include /usr/share/dpatch/dpatch.make

#uncomment if debhelper should be verbose
#export DH_VERBOSE=1

#package names
PACKAGE_GPSD := gpsd
PACKAGE_CLIENTS := gpsd-clients
PACKAGE_LIB = FIXME
PACKAGE_LIB_DEV := libgps-dev
PACKAGE_PY := python-gps


CONFFLAGS =
CONFENV =
CFLAGS =
LDFLAGS =
CPPFLAGS =

#python versions
PYVERS := $(shell pyversions -r)

#let's help configure to figure out our host/build system
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
ifeq ($(DEB_BUILD_GNU_TYPE), $(DEB_HOST_GNU_TYPE))
  CONFFLAGS += --build $(DEB_HOST_GNU_TYPE)
else
  CONFFLAGS += --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)
endif



#where our files go
PREFIX = /usr
MANDIR = $(PREFIX)/share/man
INFODIR = $(PREFIX)/share/info
CONFFLAGS += --prefix=$(PREFIX) --mandir=$(MANDIR) --infodir=$(INFODIR)



#let's take care of optimization + debug builds
CFLAGS += -Wall -g
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif
CONFENV += CFLAGS="$(CFLAGS)"



#Disallow undefined symbols in object files
LDFLAGS += -Wl,-z,defs
CONFENV += LDFLAGS="$(LDFLAGS)"



autotools-dev-stamp:
	dh_testdir

ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp -f /usr/share/misc/config.guess config.guess
endif
	touch $@


build: build-gpsd build-python build-lib-static
build-gpsd: build-gpsd-stamp
build-lib-static: build-lib-static-stamp
build-python: build-python-stamp

build-gpsd-stamp: patch-stamp autotools-dev-stamp
	dh_testdir

build-lib-static-stamp: patch-stamp autotools-dev-stamp
	dh_testdir

build-python-stamp: build-gpsd-stamp
	dh_testdir
	set -e; \
	for py in $(PYVERS); do  \
	    $$py setup.py build; \
	    $$py setup.py install --root=debian/$(PACKAGE_PY); \
	done

clean: clean-patched unpatch
clean-patched:
	dh_testdir
	dh_testroot
	dh_clean

	rm -f autotools-dev-stamp
	rm -f build-gpsd-stamp build-lib-static-stamp build-python-stamp

ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	rm -f config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	rm -f config.guess
endif

	python setup.py clean
	rm -rf build
	[ ! -r Makefile ] || $(MAKE) distclean


binary-indep: 
#nothing to do here.

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs -s ChangeLog
	dh_installdocs -s
	dh_installexamples -s
	dh_install -s
	dh_installmenu -s
	dh_desktop -s
	dh_installman -s
	dh_link -s
	dh_strip -s
	dh_compress -s
	dh_fixperms -s
	dh_installdeb -s
	dh_shlibdeps -s
	dh_gencontrol -s
	dh_md5sums -s
	dh_builddeb -s

binary: binary-indep binary-arch

get-orig-source:
	if ! which uscan; then \
            echo "Please install the devscripts package." ;\
            exit 1 ;\
        fi
	uscan --verbose --force-download

.PHONY: build build-gpsd build-python build-lib-static \
        clean binary-indep binary-arch binary install \
        get-orig-source 
